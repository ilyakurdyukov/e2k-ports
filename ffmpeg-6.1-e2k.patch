+
+        a0 = _mm_cvtsi32_si64(*(uint32_t*)(src - 3 * src_stride));
+        a1 = _mm_cvtsi32_si64(*(uint32_t*)(src - 2 * src_stride));
+        a2 = _mm_cvtsi32_si64(*(uint32_t*)(src - 1 * src_stride));
