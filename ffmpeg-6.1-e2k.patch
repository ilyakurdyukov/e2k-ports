+            }
+            *(uint32_t*)d = _mm_cvtsi64_si32(v0);
+            s += src_stride;
+            d += dst_stride;
+            a0 = a1; a1 = a2; a2 = a3; a3 = a4;
+            a4 = a5; a5 = a6; a6 = a7;
+        }
+    }
