+
+// h subpel filter uses msum to multiply+add 4 pixel taps at once
+static const uint8_t ALIGNED(16) h_subpel_filters_inner[7][16] =
+{
+    REPT4( -6, 123,  12,  -1),
+    REPT4(-11, 108,  36,  -8),
+    REPT4( -9,  93,  50,  -6),
+    REPT4(-16,  77,  77, -16),
+    REPT4( -6,  50,  93,  -9),
+    REPT4( -8,  36, 108, -11),
+    REPT4( -1,  12, 123,  -6)
