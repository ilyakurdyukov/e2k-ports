+    tP1 = VEC_LD(srcv + stride);
+    tP2 = VEC_LD(srcv + stride * 2);
+    srcv += stride * 3;
+
+    // PRAGMA_E2K("ivdep")
+    for (i = 0; i < 16; i++) {
