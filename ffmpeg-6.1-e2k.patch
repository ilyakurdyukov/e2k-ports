+    _b1 = _mm_unpackhi_epi16(a0, a2); \
+    _b2 = _mm_unpacklo_epi16(a1, a3); \
+    _b3 = _mm_unpackhi_epi16(a1, a3); \
+    _b4 = _mm_unpacklo_epi16(a4, a6); \
+    _b5 = _mm_unpackhi_epi16(a4, a6); \
+    _b6 = _mm_unpacklo_epi16(a5, a7); \
+    _b7 = _mm_unpackhi_epi16(a5, a7); \
