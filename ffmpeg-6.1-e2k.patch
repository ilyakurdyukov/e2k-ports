+    vec_s16 b1 = VEC_LD(block + 8 * 1); \
+    vec_s16 b2 = VEC_LD(block + 8 * 2); \
+    vec_s16 b3 = VEC_LD(block + 8 * 3); \
+    vec_s16 b4 = VEC_LD(block + 8 * 4); \
+    vec_s16 b5 = VEC_LD(block + 8 * 5); \
+    vec_s16 b6 = VEC_LD(block + 8 * 6); \
