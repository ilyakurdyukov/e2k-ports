+
+        tP3 = VEC_LD8(srcv);
+        QPEL8_1(t)
+        QPEL8_2
+        srcv += stride;
+
+        h0 = _mm_avg_pu8(h0, h1);
+        OP8_E2K(h0)
+
+        tM2 = tM1; tM1 = tP0; tP0 = tP1; tP1 = tP2; tP2 = tP3;
+    }
+}
