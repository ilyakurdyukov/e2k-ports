+    srcM2 = VEC_LD(src - 2); \
+    srcM1 = VEC_LD(src - 1); \
+    srcP0 = VEC_LD(src); \
+    srcP1 = VEC_LD(src + 1); \
+    srcP2 = VEC_LD(src + 2); \
