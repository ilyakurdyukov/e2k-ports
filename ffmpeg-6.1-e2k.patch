+    __m128i v0, v1, v2, sum = _mm_setzero_si128();
+
+    PRAGMA_E2K("ivdep")
+    for (i = 0; i < h; i++) {
+        LOAD_PIX(v1, v2, pix2);
+        v0 = VEC_LD(pix1);
+        v1 = _mm_avg_epu8(v1, v2);
+        sum = _mm_add_epi32(sum, _mm_sad_epu8(v0, v1));
+
+        pix1 += stride;
+        pix2 += stride;
+    }
+    return _mm_extract_epi32(sum, 0) + _mm_extract_epi32(sum, 2);
+}
