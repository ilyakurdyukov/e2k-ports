+
+    PRAGMA_E2K("ivdep")
+    for (i = 0; i < h; i++) {
+        a0 = *(__m64*)(src - 2);
+        a1 = _mm_cvtsi32_si64(src[8 - 2]);
+        FILTER_H4(IF6TAP);
+        src += src_stride;
+        dst += dst_stride;
