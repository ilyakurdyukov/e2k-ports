+    A = _mm_add_epi16(M16(b1, C1), M15(b7, C7)); \
+    B = _mm_sub_epi16(M15(b1, C7), M16(b7, C1)); \
+    C = _mm_add_epi16(M16(b3, C3), M16(b5, C5)); \
+    D = _mm_sub_epi16(M16(b5, C3), M16(b3, C5)); \
+    \
+    Ad = M16(_mm_sub_epi16(A, C), C4); \
+    Bd = M16(_mm_sub_epi16(B, D), C4); \
