+    m2 = _mm_madd_epi16(m0, c4_e0); /* e0 */ \
+    t0 = _mm_madd_epi16(m1, c4_o0); /* o0 */ \
+    m0 = _mm_madd_epi16(m0, c4_e1); /* e1 */ \
+    t1 = _mm_madd_epi16(m1, c4_o1); /* o1 */ \
+    m2 = _mm_add_epi32(m2, bias); \
+    m0 = _mm_add_epi32(m0, bias); \
