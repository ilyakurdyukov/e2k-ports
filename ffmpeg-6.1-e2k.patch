+    __m128i a0;
+
+    PRAGMA_E2K("ivdep")
+    for (i = 0; i < h; i++) {
+        a0 = VEC_LD(src - 2);
+        FILTER_H(a0, IF6TAP);
+        a0 = _mm_packus_epi16(a0, a0);
+        VEC_STL(dst, a0);
+        src += src_stride;
