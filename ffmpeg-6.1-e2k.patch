+        m1 = _mm_srai_epi32(m1, shr); /* e1 + o1 */ \
+        m2 = _mm_srai_epi32(m2, shr); /* e0 - o0 */ \
+        m0 = _mm_srai_epi32(m0, shr); /* e1 - o1 */ \
