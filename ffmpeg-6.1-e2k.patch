+        tP0A = tP1A; tP0B = tP1B; \
+        tP1A = tP2A; tP1B = tP2B; \
+        tP2A = _mm_add_epi16(v4, _mm_add_epi16(v0, v2)); \
+        tP2B = _mm_add_epi16(v5, _mm_add_epi16(v1, v3)); \
+        QPEL16_HVV1_##PY \
+    } \
+    PRAGMA_E2K("ivdep") \
+    for (i = 0; i < 16; i++) { \
+        QPEL16_LOAD_H \
+        QPEL16_1(src) \
